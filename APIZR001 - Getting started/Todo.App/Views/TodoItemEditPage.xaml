<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Todo.App.Views.TodoItemEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Todo.App.ViewModels"
    Title="{Binding TodoItem.Name}"
    x:DataType="viewmodel:TodoItemEditViewModel">
    <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

        <Label
            Margin="0,0,0,8"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Style="{StaticResource LargeLabel}"
            Text="{Binding TodoItem.Name}"
            TextColor="White" />
    </ScrollView>
</ContentPage>